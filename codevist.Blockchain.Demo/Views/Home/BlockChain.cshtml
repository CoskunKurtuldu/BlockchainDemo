                })
                .error(function (xhr, status) {
                    alert('Hata Oluştu');
                    App.unblockUI('#blockBody');
                });
        });
        var hash;
        var difficultyLevel=@ConfigurationManager.AppSettings["DifficultyLevel"];
        var zeros = "";
        for (i = 0; i < difficultyLevel; i++) {
            zeros += "0";
        }
        
        function updateHash(updateId) {
            hash = Sha256.hash($('#blockChainData' + updateId).val() + $('#blockChainPrev' + updateId).val() + $('#blockChainNonce' + updateId).val());

            if (hash.substring(0, difficultyLevel) === zeros) {
                $(".blockChain" + updateId).addClass("well-success");
                $(".blockChain" + updateId).removeClass("well-warning");
            }
            else {
                $(".blockChain" + updateId).removeClass("well-success");
                $(".blockChain" + updateId).addClass("well-warning");
            }
            $('#blockChainHash' + updateId).val(hash);
            $('#blockChainPrev' + (updateId + 1)).val(hash);
            if (updateId < 5) {
                updateHash(updateId + 1);
            }
        }
    </script>
