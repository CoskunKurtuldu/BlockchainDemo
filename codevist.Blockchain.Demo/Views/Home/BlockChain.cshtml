    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/jquery.blockui.min.js"></script>
    <script src="~/Scripts/sha256.js"></script>

    <script>
        $(document).ready(function () {
            for (var i = 0; i < 6; i++) {
                $(".blockChain"+i).addClass("well-success");
                $(".blockChain1"+i).removeClass("well-warning");
            }
        });
       
        function blockUI() {
            App.blockUI({
                target: '#blockBody',
                animate: true
            });
            return true;
        };
        $('#blockChainCalculateHash1').click(function () {
            blockUI();
            var formData = {
                Data: $('#blockChainData1').val(),
                Prev: $('#blockChainPrev1').val()
            }
            $.ajax({
                    type: "POST",
                    url: '@Url.Action("ReturnBlockChainCalculatedHashNonceAndPrev", "Home")',
                    data: formData,
                    datatype: "JSON"
                })
                .success(function (data) {
                    $('#blockChainHash1').val(data.Hash);
                    $('#blockChainPrev2').val(data.Hash);
                    $('#blockChainNonce1').val(data.Nonce);
                    App.unblockUI('#blockBody');
                    $(".blockChain1").addClass("well-success");
                    $(".blockChain1").removeClass("well-warning");

                })
                .error(function(xhr, status) {
                    alert('Hata Oluştu');
                    App.unblockUI('#blockBody');

                });
        });

